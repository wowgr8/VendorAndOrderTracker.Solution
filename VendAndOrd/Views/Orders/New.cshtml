@{
  Layout = "_Layout";
}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendors & Orders!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    <h1>Add a new order to @Model.Name</h1>

    <form action="/vendors/@Model.Id/orders" method="post">
      <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
      <label for="orderDescription">Order Description:</label>
      <input id="orderDescription" name="orderDescription" type="text">
      <label for="orderDeliveryDate">Deliver By:</label>
      <input id="orderDeliveryDate" name="orderDeliveryDate" type="text">
      <label for="orderPrice">Total Price: $</label>
      <input id="orderPrice" name="orderPrice" type="int">
      <button type='submit'>Add Order</button>
    </form>
  </body>
</html>
